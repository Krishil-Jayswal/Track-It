generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String
  avatar     String
  oauth_type Oauth_Type
  oauth_id   String
  sessions   Session[]
  @@unique([oauth_type, oauth_id])
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
}

enum Oauth_Type {
  GOOGLE
  GITHUB
}
